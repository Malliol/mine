Функция ПолучениеХодаИгрока(ИмяИгрока)
  Консоль.Вывести("Добро пожаловать в игру ""Камень-Ножницы-Бумага!"""+Символы.ПС);
  Консоль.Вывести(ИмяИгрока + " - Ваш ход(Ножницы - 1, Камень - 2, Бумага - 3, Выход 0)"+Символы.ПС);
  ХодИгрока = Число(Консоль.ПрочитатьСтроку());  
  Пока ХодИгрока <0 и ХодИгрока >3 Цикл
    Консоль.Вывести(ИмяИгрока + "Вы ошиблись. Повторите ввод");
    ХодИгрока = Число(Консоль.ПрочитатьСтроку());  
  КонецЦикла;
  Возврат ХодИгрока;
КонецФункции
 
Функция ПолучитьМатрицуПобед()
  МатрицаПобед = новый Массив(3,3);
  МатрицаПобед[0][0] = 2;
  МатрицаПобед[0][1] = 1;
  МатрицаПобед[0][2] = 0;
  МатрицаПобед[1][0] = 0;
  МатрицаПобед[1][1] = 2;
  МатрицаПобед[1][2] = 1;
  МатрицаПобед[2][0] = 1;
  МатрицаПобед[2][1] = 0;
  МатрицаПобед[2][2] = 2;
  Возврат МатрицаПобед;
КонецФункции

